#include <iostream>
#include <fstream>
#include <cstring>

using namespace std;

const char* const DELIMITER = " ,.(){}[]/!?";


int main()
{
  ifstream file("testfiles/005multiline_multi_minutehoursdays");
  if (!file) 
    return 1;

  while (!file.eof())
  {
    char line[5000];
    file.getline(line, 5000);
    
    // parse the line into blank-delimited tokens
    int n = 0; // a for-loop index
    
    // array to store memory addresses of the tokens in buf
    //const char* token[500] = {}; // initialize to 0
    
    // parse the line
    char* prev_word="";
    char* word = strtok(line, DELIMITER); // first token

    if (word) // zero if line is blank
    {
      for (n = 1; n < 500; n++)
      {
	cout << word << endl;
	prev_word = word;
        word = strtok(0, DELIMITER); // subsequent tokens
        if (!word) break; // no more tokens
      }
    }
  }
}
